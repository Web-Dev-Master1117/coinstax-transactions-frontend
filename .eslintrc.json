{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react", "react-hooks", "prettier", "eslint-plugin-prettier"],
  "rules": {
    //add customize rules here as per your project's needs
    "prettier/prettier": "warn",
    "no-unused-vars": "warn",
    "react/prop-types": "off",
    "react/no-unknown-property": "warn",
    "react/react-in-jsx-scope": "warn",
    "react/no-unescaped-entities": "warn",
    "no-undef": "warn",
    "react/jsx-key": "warn",
    "no-empty": "warn"
  }
}
