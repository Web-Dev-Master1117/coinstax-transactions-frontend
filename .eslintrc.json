{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    // "airbnb/base",
    "eslint-config-prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react", "react-hooks", "prettier", "eslint-plugin-prettier"],
  "rules": {
    //add customize rules here as per your project's needs
    "prettier/prettier": "warn",
    "no-unused-vars": "warn"
  }
}
